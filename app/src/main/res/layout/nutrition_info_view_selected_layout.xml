<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/nutritionSelectBackground"
    >

    <LinearLayout
        android:id='@+id/nViewTop'
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_list_food_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="start"
            />

        <TextView
            android:id='@+id/detail_list_food_calorie'
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="end"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nViewTop"
        android:id='@+id/nViewBottom'
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_list_food_fat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="start"
            />

        <TextView
            android:id='@+id/detail_list_food_carb'
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="end"
            />

    </LinearLayout>
    <TextView
        android:id='@+id/detail_list_food_date'
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below='@id/nViewBottom'
        android:textStyle="italic"
        />
    <RelativeLayout
        android:layout_below="@id/detail_list_food_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/edit_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/food_detail_edit_button"/>

        <Button
            android:id="@+id/delete_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/food_detail_delete_button"/>

    </RelativeLayout>
</RelativeLayout>

