<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rwmol.cst2335_final_project.ActivityTrackerActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/welcome_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="51dp"
            android:text="@string/welcome_text"
            android:textAlignment="center"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/welcome_image"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/activity" />

        <Button
            android:id="@+id/addNewActivityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="37dp"
            android:layout_marginStart="22dp"
            android:background="@android:color/holo_blue_bright"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="@string/addNewActivityButtonText"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/viewHistoryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/addNewActivityButton"
            android:layout_alignBottom="@+id/addNewActivityButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:background="@android:color/holo_blue_bright"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="@string/viewHistoryButtonText"
            android:textColor="@color/white" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>




